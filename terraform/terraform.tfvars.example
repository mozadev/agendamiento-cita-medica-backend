# ===============================================
# Terraform Variables - Example
# ===============================================
# Copia este archivo a terraform.tfvars y actualiza los valores

# ===============================================
# General
# ===============================================
aws_region   = "us-east-1"
environment  = "dev"  # dev, staging, prod
project_name = "agendamiento-citas"

# ===============================================
# VPC
# ===============================================
vpc_cidr             = "10.0.0.0/16"
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.11.0/24"]
database_subnet_cidrs = ["10.0.20.0/24", "10.0.21.0/24"]

# ===============================================
# RDS
# ===============================================
rds_instance_class          = "db.t3.micro"  # db.t3.small for prod
rds_allocated_storage       = 20
rds_engine_version          = "8.0"
rds_backup_retention_period = 7
rds_multi_az               = false  # true for prod

# RDS Peru
rds_pe_database_name    = "appointments_pe"
rds_pe_master_username  = "admin"
rds_pe_master_password  = "CHANGE_ME_SECURE_PASSWORD"  # Min 8 chars

# RDS Chile
rds_cl_database_name    = "appointments_cl"
rds_cl_master_username  = "admin"
rds_cl_master_password  = "CHANGE_ME_SECURE_PASSWORD"  # Min 8 chars

# ===============================================
# NOTA: Para producción:
# ===============================================
# 1. Usa contraseñas seguras (>= 16 caracteres)
# 2. Nunca commites este archivo con valores reales
# 3. Usa AWS Secrets Manager o CI/CD secrets
# 4. Habilita Multi-AZ (rds_multi_az = true)
# 5. Aumenta instancia RDS (db.t3.small o superior)
# 6. Configura backups automáticos

